name: Build Android APK
on: [push] # Akan berjalan setiap kali ada file baru di-upload

jobs:
  build:
    runs-on: ubuntu-latest
    steps:
    - name: Ambil Kode dari Repository
      uses: actions/checkout@v3

    - name: Siapkan Java (JDK 11)
      uses: actions/setup-java@v3
      with:
        distribution: 'temurin'
        java-version: '11'

    - name: Beri Izin pada File Gradle
      run: chmod +x ./gradlew
      - name: Build APK Debug
      run: ./gradlew assembleDebug # Perintah ini khusus untuk membuat APK

    - name: Upload APK sebagai Artefak
      uses: actions/upload-artifact@v3
      with:
        name: app-debug.apk # Nama file yang bisa Anda download nanti
        path: app/build/outputs/apk/debug/app-debug.apk # Lokasi file APK setelah di-build
