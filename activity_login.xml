<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="24dp"
    android:gravity="center"
    android:background="@color/background_dark_purple"
    tools:context=".LoginActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cicoin Miner"
        android:textSize="32sp"
        android:textStyle="bold"
        android:textColor="@color/text_primary_light"/>

    <EditText
        android:id="@+id/etEmail"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:hint="Email"
        android:inputType="textEmailAddress"
        android:backgroundTint="@color/surface_purple"
        android:textColorHint="@color/text_secondary_light"
        android:textColor="@color/text_primary_light"
        android:layout_marginTop="32dp"/>

    <EditText
        android:id="@+id/etWalletAddress"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:hint="Alamat Wallet Cicoin"
        android:inputType="text"
        android:backgroundTint="@color/surface_purple"
        android:textColorHint="@color/text_secondary_light"
        android:textColor="@color/text_primary_light"
        android:layout_marginTop="16dp"/>

    <Button
        android:id="@+id/btnLoginRegister"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Login / Registrasi"
        android:backgroundTint="@color/primary_accent"
        android:textColor="@color/white"
        android:padding="12dp"
        android:layout_marginTop="24dp"/>

</LinearLayout>